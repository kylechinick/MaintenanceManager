@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;

<main>

  <h2>Engineer Details</h2>

  <hr />

  <h3>@Html.DisplayNameFor(model => model.EngineerName): @Html.DisplayFor(model => model.EngineerName)</h3>
  <h4>@Html.DisplayNameFor(model => model.EngineerEmploymentStartDate): @Html.DisplayFor(model => model.EngineerEmploymentStartDate)</h4>

  @if(@Model.JoinEntities.Count == 0)
  {
    <p>This engineer is not assigned to any machines</p>
  }
  else
  {
    <h4>Machines this engineer is licensed to repair:</h4>
    <ul>
    @foreach(var join in Model.JoinEntities)
    {
      <li>@join.Machine.MachineName</li>
    }
    </ul>
  }

  <p>@Html.ActionLink("Back to list", "Index")</p>
  
  <p>@Html.ActionLink("Edit Engineer", "Edit", new { id = Model.EngineerId })</p>

  <p>@Html.ActionLink("Delete Engineer", "Delete", new { id = Model.EngineerId })</p>
</main>
